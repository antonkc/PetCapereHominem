{
	"hosting": {
		"site": "petcaperehominem-4c5c5",
		"public": "public",
		"ignore": [
			"firebase.json",
			"**/.*",
			"**/node_modules/**"
		],
		"rewrites": [
			{
				"source": "**/*.htm*",
				"destination": "/index.html"
			}
		]
	},
	"database": {
		"rules": "control/database.rules.json"
	},
	"firestore": {
		"rules": "control/firestore.rules",
		"indexes": "control/firestore.indexes.json"
	},
	"functions": {
		"predeploy": [
			"npm --prefix \"$RESOURCE_DIR\" run lint",
			"npm --prefix \"$RESOURCE_DIR\" run build"
		]
	},
	"storage": {
		"rules": "control/storage.rules"
	},
	"emulators": {
		"auth": {
			"port": 9099
		},
		"functions": {
			"port": 5001
		},
		"firestore": {
			"port": 8080
		},
		"database": {
			"port": 9000
		},
		"hosting": {
			"port": 5000
		},
		"pubsub": {
			"port": 8085
		},
		"storage": {
			"port": 9199
		},
		"ui": {
			"enabled": true
		}
	},
	"remoteconfig": {
		"template": "control/remoteconfig.template.json"
	}
}
